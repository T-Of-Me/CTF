<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
    version="4.0">

    <display-name>FinSight Statement Viewer</display-name>

    <servlet>
        <servlet-name>statementViewServlet</servlet-name>
        <servlet-class>com.finsight.servlet.StatementViewServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>statementDownloadServlet</servlet-name>
        <servlet-class>com.finsight.servlet.StatementDownloadServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>statementUploadServlet</servlet-name>
        <servlet-class>com.finsight.servlet.StatementUploadServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>statementViewServlet</servlet-name>
        <url-pattern>/statements/view</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>statementDownloadServlet</servlet-name>
        <url-pattern>/statements/download</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>statementUploadServlet</servlet-name>
        <url-pattern>/statements/upload</url-pattern>
    </servlet-mapping>

    <!-- JSP Configuration -->
    <jsp-config>
        <jsp-property-group>
            <url-pattern>*.jsp</url-pattern>
            <page-encoding>UTF-8</page-encoding>
        </jsp-property-group>
    </jsp-config>

    <!-- Error Pages -->
    <error-page>
        <error-code>404</error-code>
        <location>/WEB-INF/jsp/error.jsp</location>
    </error-page>
    <error-page>
        <error-code>403</error-code>
        <location>/WEB-INF/jsp/error.jsp</location>
    </error-page>
    <error-page>
        <error-code>400</error-code>
        <location>/WEB-INF/jsp/error.jsp</location>
    </error-page>
    <error-page>
        <error-code>500</error-code>
        <location>/WEB-INF/jsp/error.jsp</location>
    </error-page>

    <error-page>
        <exception-type>java.lang.Exception</exception-type>
        <location>/WEB-INF/jsp/error.jsp</location>
    </error-page>

    <error-page>
        <exception-type>java.lang.Throwable</exception-type>
        <location>/WEB-INF/jsp/error.jsp</location>
    </error-page>

    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>